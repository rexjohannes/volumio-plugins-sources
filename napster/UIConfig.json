{
  "page": {
    "label": "TRANSLATE.PLUGIN_CONFIGURATION"
  },
  "sections": [
    {
      "id": "section_account",
      "element": "section",
      "label": "Napster account",
      "icon": "fa-plug",
      "onSave": {"type":"controller", "endpoint":"music_service/napster", "method":"saveNapsterAccount"},
      "saveButton": {
        "label": "TRANSLATE.SAVE",
        "data": [
          "email",
          "password"
        ]
      },
      "content": [
        {
          "id": "email",
          "type":"text",
          "element": "input",
          "doc": "This is the email of your Napster account",
          "label": "Email",
          "value": ""
        },
        {
          "id": "password",
          "type":"password",
          "element": "input",
          "doc": "This is the password of your Napster account",
          "label": "Password",
          "value": ""
        }
      ]
    },
    {
      "id": "section_images",
      "element": "section",
      "label": "Image size",
      "icon": "fa-picture-o",
      "onSave": {"type":"controller", "endpoint":"music_service/napster", "method":"saveNapsterImageSize"},
      "saveButton": {
        "label": "TRANSLATE.SAVE",
        "data": ["image_size"]
        },
      "content": [
        {
          "id": "image_size",
          "type":"select",
          "element": "select",
          "doc": "This is the size of the images that will be displayed in the UI",
          "label": "Image size",
          "value": "large",
          "options": [
            {
              "label": "Small",
              "value": "small"
            },
            {
              "label": "Medium",
              "value": "medium"
            },
            {
              "label": "Large",
              "value": "large"
            }
          ]
        }
      ]
    }
  ]
}
